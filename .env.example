# SASA Travel Environment Variables
# Copy this file to .env and fill in the values

# ===========================================
# API Configuration
# ===========================================

# WhatsApp API phone number (required for contact forms)
WHATSAPP_PHONE_NUMBER=+9779817653406

# Frontend URL for CORS (production)
FRONTEND_URL=https://sasatravel.com

# ===========================================
# Social Media Links
# ===========================================

VITE_SOCIAL_FACEBOOK=https://facebook.com/sasatravel
VITE_SOCIAL_INSTAGRAM=https://instagram.com/sasatravel
VITE_SOCIAL_TWITTER=https://twitter.com/sasatravel
VITE_SOCIAL_TIKTOK=https://tiktok.com/@sasatravel
VITE_SOCIAL_YOUTUBE=https://youtube.com/@sasatravel
VITE_SOCIAL_FACEBOOK_STORIES=https://facebook.com/stories/sasatravel

# ===========================================
# Analytics (Optional)
# ===========================================

# Google Analytics 4 Measurement ID
# Get from: Admin > Data Streams > Measurement ID
VITE_GA_MEASUREMENT_ID=

# Error Reporting URL (optional)
VITE_ERROR_REPORT_URL=

# ===========================================
# Feature Flags (Optional)
# ===========================================

# Enable/disable features
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_MOCK_DATA=false

